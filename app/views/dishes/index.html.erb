<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <h2>Add to Table <%= @tab.table_number %></h2>
       <form class="form-inline md-form mr-auto mb-4">
       <i class="fas fa-search" aria-hidden="true"></i>
          <%= form_tag tab_dishes_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control mr-sm-2",
              placeholder: "Find an item" %>
              <%= submit_tag "Search", class: "btn btn-outline-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>

<div class="accordion" id="categoryAccordion">
  <%= @categories.each do |category| %>
    <div class="accordion-item mb-1">
      <h2 class="accordion-header" id="categoryItemHeading-<%= category %>">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#categoryItem-<%= category %>">
          <%= category %>
        </button>
      </h2>

      <div id="categoryItem-<%= category %>" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
        <div class="accordion-body">
          <% @dishes.where(category: category).each do |dish| %>
            <div class="container justify-content-center">
              <div class="card my-2">
                <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                  <h5 class="card-title"><%= dish.name %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= display_price(dish.price_cents) %></h6>
                </div>
                    <%= simple_form_for(@tab, method: :post, url: tab_tab_dishes_path) do |f| %>
                      <%= f.input :dish_id, input_html: { value: dish.id }, wrapper_html: { class: "d-none"}, as: :hidden %>
                      <%= f.submit "+", class: 'btn plus' %>
                    <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
