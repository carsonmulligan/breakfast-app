<div class="container">
<div class="row justify-content-center">
      <h1>Tabs#index</h1>
      <p>Find me in app/views/tabs/index.html.erb</p>
      <h2>List of tables</h2>
</div>
</div>

<div class="cards-container">
       <div class="row">
           <div class="cards">
                <div class="col-6">
                    <% @tabs.each do |tab| %>
                   <div class="card">
                        <%= tab.table_number %>
                        <%= tab.status %>
                        <%= link_to 'Show', tab_path(tab) %>
                     <% end %>
                   </div>
              </div>
          </div>
     </div>
</div>
