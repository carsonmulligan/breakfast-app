<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <!-- This div is centered and takes 6 columns -->


      <div class="container">
      <h1 class="logo"> El Taco </h1>
        <div class="row">
              <h1 class="tableclass"> Table <%= @tab.table_number  %></h1>
              <h4 class="overview">Overview</h4>
        </div>
        <h2>Total</h2>
        <h3 id="price-total" ></h3>
      </div>



        <% @tab.dishes.each do |dish| %>
      <div class="container justify-content-center">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= dish.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= humanized_money_with_symbol(dish.price_cents) %></h6>
            <a href="#" class="card-link">-</a>
            <a href="#" class="card-link">+</a>
          </div>
        </div>
      </div>
        <% end %>

      <div class="btn-group" role="group" aria-label="Basic example">
        <div class="d-grid gap-2 col-6 mx-auto">
          <%= link_to 'Add items', tab_dishes_path(@tab), class: "btn btn-dark btn-small" %>

          <%= form_tag bills_path do %>
            <%= hidden_field_tag 'tab_id', @tab.id %>
            <%= submit_tag 'Purchase', class: 'btn btn-dark btn small' %>
          <% end %>
        </div>
      </div>


    </div>
  </div>
</div>
